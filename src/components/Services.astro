---
import { getLangFromUrl, useTranslations } from "../utils/i18n";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id="services" class="py-16">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h2 class="text-3xl font-bold text-gray-900 sm:text-4xl">
        {t("services.title")}
      </h2>
    </div>

    <div
      class="mt-16 grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3 items-start"
    >
      <!-- Service 1 -->
      <div
        class="service-card bg-white p-8 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300 border border-gray-100 flex flex-col md:min-h-[320px]"
      >
        <div
          class="flex items-center justify-center w-12 h-12 bg-primary rounded-md mb-6"
        >
          <svg
            class="w-6 h-6 text-white"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"
            ></path>
          </svg>
        </div>

        <h3 class="text-xl font-semibold text-gray-900 mb-8">
          {t("services.tax")}
        </h3>

        <!-- Accordion -->
        <details class="accordion-item">
          <summary
            class="flex justify-between items-center cursor-pointer list-none p-3 -m-3 rounded-lg bg-primary-lighter hover:bg-neutral-10 transition-colors group"
          >
            <p
              class="text-gray-900 leading-relaxed font-medium group-hover:text-gray-900"
            >
              {t("services.tax.subtitle")}
            </p>
            <div class="accordion-icon">
              <svg
                class="w-6 h-6"
                style="color: var(--color-primary);"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2.5"
                  d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
              </svg>
            </div>
          </summary>

          <div class="accordion-content mt-4 pt-4 border-t border-gray-100">
            <p class="text-gray-600 leading-relaxed">
              {t("services.tax.desc")}
            </p>
          </div>
        </details>
      </div>

      <!-- Service 2 -->
      <div
        class="service-card bg-white p-8 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300 border border-gray-100 flex flex-col min-h-[320px]"
      >
        <div
          class="flex items-center justify-center w-12 h-12 bg-primary rounded-md mb-6"
        >
          <svg
            class="w-6 h-6 text-white"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
            ></path>
          </svg>
        </div>

        <h3 class="text-xl font-semibold text-gray-900 mb-8">
          {t("services.accounting")}
        </h3>

        <!-- Accordion -->
        <details class="accordion-item">
          <summary
            class="flex justify-between items-center cursor-pointer list-none p-3 -m-3 rounded-lg bg-primary-lighter hover:bg-neutral-10 transition-colors group"
          >
            <p
              class="text-gray-800 leading-relaxed font-medium group-hover:text-gray-900"
            >
              {t("services.accounting.subtitle")}
            </p>
            <div class="accordion-icon">
              <svg
                class="w-6 h-6"
                style="color: var(--color-primary);"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2.5"
                  d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
              </svg>
            </div>
          </summary>

          <div class="accordion-content mt-4 pt-4 border-t border-gray-100">
            <p class="text-gray-600 leading-relaxed">
              {t("services.accounting.desc")}
            </p>
          </div>
        </details>
      </div>

      <!-- Service 3 -->
      <div
        class="service-card bg-white p-8 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300 border border-gray-100 flex flex-col min-h-[320px]"
      >
        <div
          class="flex items-center justify-center w-12 h-12 bg-primary rounded-md mb-6"
        >
          <svg
            class="w-6 h-6 text-white"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"
            ></path>
          </svg>
        </div>

        <h3 class="text-xl font-semibold text-gray-900 mb-8">
          {t("services.consulting")}
        </h3>

        <!-- Accordion -->
        <details class="accordion-item">
          <summary
            class="flex justify-between items-center cursor-pointer list-none p-3 -m-3 rounded-lg bg-primary-lighter hover:bg-neutral-10 transition-colors group"
          >
            <p
              class="text-gray-800 leading-relaxed font-medium group-hover:text-gray-900"
            >
              {t("services.consulting.subtitle")}
            </p>
            <div class="accordion-icon">
              <svg
                class="w-6 h-6"
                style="color: var(--color-primary);"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2.5"
                  d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
              </svg>
            </div>
          </summary>

          <div class="accordion-content mt-4 pt-4 border-t border-gray-100">
            <p class="text-gray-600 leading-relaxed">
              {t("services.consulting.desc")}
            </p>
          </div>
        </details>
      </div>
    </div>
  </div>
</section>

<style>
  details > summary {
    list-style: none;
  }

  details > summary::-webkit-details-marker {
    display: none;
  }

  .accordion-item[open] .accordion-icon svg {
    transform: rotate(45deg);
    color: var(--color-accent) !important;
  }

  .accordion-icon svg {
    transition:
      transform 0.3s ease,
      color 0.3s ease;
  }

  .accordion-item summary:hover .accordion-icon svg {
    color: var(--color-primary-dark) !important;
  }

  .accordion-item[open] .accordion-content {
    animation: accordion-open 0.3s ease-out;
  }

  @keyframes accordion-open {
    0% {
      opacity: 0;
      transform: translateY(-10px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
